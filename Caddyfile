# run the server on port 80
aran.site

# rooted in the public directory
root aran.site/public

# remove extensions from html files
ext .html

# -- temporarily forward to resume page --
redir 302 {
	if {path} is /
	/ /resume
}

# get project from git
git {
	repo https://github.com/aranscope/aran.site.git
	branch release
}

# on startup rebuild our sass and pug
startup gulp
